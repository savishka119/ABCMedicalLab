@using System.Text.Json;
@using Utility;
@model Models.Query
@{
    //var groups = JsonSerializer.Serialize(Model.GroupList);
}

<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice {
        color: black;
    }

    .required:after {
        content: " *";
        color: red;
    }
</style>
<div class="container">
    <div class="card">
        <div class="card-header bg-gradient-lightblue">
            <h3 class="card-title" style="font-weight:bold">Make Reply.</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input type="hidden" asp-for="Id" value="@Model.Id" />
                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="required" asp-for="User.UserName">Customer Name</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.User.UserName</p>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="required" asp-for="QueryDetails">Query</label>
                    </div>
                    <div class="col-md-8">
                        <p>@Model.QueryDetails</p>
                        <input asp-for="QueryDetails" hidden class="form-control" />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-md-4">
                        <label class="required" asp-for="Reply"></label>
                    </div>
                    <div class="col-md-8">
                        <textarea class="form-control" asp-for="Reply"></textarea>
                        <span asp-validation-for="Reply" class="text-danger"></span>
                    </div>
                </div>
              

                <div class="form-group row">
                    <div class="col-md-8 offset-md-4">
                        <div class="row">
                            <div class="col">
                                <button type="submit" class="btn btn-primary form-control" asp-route-id="@Model">Send Reply</button>
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


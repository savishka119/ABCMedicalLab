        data-salesGroups="@salesGroups" src="~/js/custom/user/create.js"></script> *@

    <script>
        function printImg() {
            pwin = window.open(document.getElementById("imageMain").src, "_blank");
            pwin.onload = function () { window.print(); }
        }
       </script>
}